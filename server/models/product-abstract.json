{
  "name": "productAbstract",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "scope": {
    "include": [
      "category",
      "subCategory",
      "manufacturer",
      "warehouseProducts"
    ]
  },
  "properties": {
    "nameEn": {
      "type": "string",
      "required": true
    },
    "nameAr": {
      "type": "string"
    },
    "barcode": {
      "type": "array"
    },
    "officialConsumerPrice": {
      "type": "number"
    },
    "officialMassMarketPrice": {
      "type": "number"
    }
  },
  "validations": [],
  "relations": {
    "manufacturer": {
      "type": "belongsTo",
      "model": "manufacturers"
    },
    "category": {
      "type": "belongsTo",
      "model": "categories",
      "foreignKey": "",
      "options": {
        "nestRemoting": true
      }
    },
    "subCategory": {
      "type": "belongsTo",
      "model": "categories",
      "foreignKey": "",
      "options": {
        "nestRemoting": true
      }
    },
    "MEDIA": {
      "type": "embedsOne",
      "model": "media",
      "property": "media"
    },
    "warehouseProducts": {
      "type": "hasMany",
      "model": "warehouseProducts",
      "foreignKey": ""
    }
  },
  "acls": [],
  "methods": {
    "search": {
      "isStatic": true,
      "accepts": [
        {
          "arg": "string",
          "type": "string",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "isOffer",
          "type": "string",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "clientType",
          "type": "string",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "limit",
          "type": "number",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "skip",
          "type": "number",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "res",
          "http": {
            "source": "res"
          }
        }
      ],
      "http": {
        "verb": "get",
        "path": "/search"
      }
    },
    "warnings": {
      "isStatic": true,
      "accepts": [
        {
          "arg": "context",
          "type": "object",
          "required": true,
          "description": "",
          "http": {
            "source": "context"
          }
        },
        {
          "arg": "res",
          "http": {
            "source": "res"
          }
        },
        {
          "arg": "warehouseId",
          "type": "string",
          "required": false,
          "description": "",
          "http": {
            "source": "path"
          }
        }
      ],
      "returns": [
        {
          "arg": "result",
          "type": "array",
          "root": true,
          "description": ""
        }
      ],
      "description": "get warehouse products which are close to runing out",
      "http": [
        {
          "path": "/warnings/:warehouseId",
          "verb": "get"
        }
      ]
    }
  }
}
