{
  "name": "orderProducts",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "scope": {
    "include": [
      "product"
    ]
  },
  "properties": {
    "pack": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },   
    "subtotalSellingPrice": {
      "type": "number"
    },
    "count": {
      "type": "number",
      "required": true,
      "default": 1
    },
    "offerSource": {
      "type": "string",
      "default": "dockan"
    },
    "creationDate": {
      "type": "date",
      "required": true,
      "default": "$now"
    },
    "media": {
      "type": "object",
      "required": true
    },
    "isOffer": {
      "type": "boolean"
    }
  },
  "validations": [],
  "relations": {
    "product": {
      "type": "belongsTo",
      "model": "products"
    },
    "orders": {
      "type": "belongsTo",
      "model": "orders",
      "foreignKey": "orderId"
    } ,
    "orderProductSnapshotRelation": {
      "type": "embedsOne",
      "model": "orderProductSnapshot",
      "property" : "orderProductSnapshot",
      "options": {
        "validate": true,
        "forceId": false
      } 
    }
  },
  "acls": [],
  "methods": {}
}
