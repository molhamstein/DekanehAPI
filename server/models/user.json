{
  "name": "user",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "ttl": 31536000000
  },
  "hidden": [
    "credentials",
    "challenges"
  ],
  "scope": {
    "include": [
      "roles"
    ]
  },
  "properties": {
    "phoneNumber": {
      "type": "string",
      "required": true
    },
    "fireBaseToken": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "pending"
    },
    "email": {
      "type": "string"
    },
    "clientType": {
      "type": "string",
      "required": true,
      "default": "horeca"
    },
    "ownerName": {
      "type": "string"
    },
    "shopName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "locationPoint": {
      "type": "geopoint"
    },
    "notes": {
      "type": "string"
    },
    "creationDate": {
      "type": "date",
      "required": true,
      "default": "$now"
    }
  },
  "validations": [],
  "relations": {
    "area": {
      "type": "belongsTo",
      "model": "area"
    },
    "roles": {
      "type": "referencesMany",
      "model": "role"
    },
    "privileges": {
      "type": "referencesMany",
      "model": "privilege"
    },
    "favorite": {
      "type": "hasMany",
      "model": "products",
      "foreignKey": "ownerId",
      "through": "favorite",
      "options": {
        "disableInclude": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "staffLogin"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "forgotPassword"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "getResetPassword"
    }
  ],
  "methods": {
    "setFirebaseToken": {
      "isStatic": true,
      "accepts": [
        {
          "arg": "token",
          "type": "string",
          "required": true,
          "description": ""
        },
        {
          "arg": "req",
          "type": "object",
          "http": {
            "source": "req"
          }
        }
      ],
      "returns": [
        {
          "arg": "result",
          "type": "string",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/setFirebaseToken",
          "verb": "put"
        }
      ]
    },
    "isActivated": {
      "isStatic": true,
      "accepts": [
        {
          "arg": "req",
          "type": "object",
          "http": {
            "source": "req"
          }
        }
      ],
      "returns": [
        {
          "arg": "result",
          "type": "boolean",
          "root": true,
          "description": ""
        }
      ],
      "description": "",
      "http": [
        {
          "path": "/isActivated",
          "verb": "get"
        }
      ]
    },
    "forgetpassword": {
      "isStatic": true,
      "accepts": [
        {
          "arg": "phoneNumber",
          "type": "string",
          "required": true,
          "description": ""
        }
      ],
      "returns": [
        {
          "arg": "result",
          "type": "string",
          "root": true,
          "description": ""
        }
      ],
      "description": "add notification to admin to reset password",
      "http": [
        {
          "path": "/forgetpassword",
          "verb": "post"
        }
      ]
    },
    "resetPassword": {
      "isStatic": true,
      "accepts": [
        {
          "arg": "id",
          "type": "string",
          "required": true,
          "description": ""
        },
        {
          "arg": "password",
          "type": "string",
          "required": true,
          "description": ""
        }
      ],
      "returns": [
        {
          "arg": "result",
          "type": "string",
          "root": true,
          "description": ""
        }
      ],
      "description": "add notification to admin to reset password",
      "http": [
        {
          "path": "/resetPassword",
          "verb": "post"
        }
      ]
    }
  }
}
