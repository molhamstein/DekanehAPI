{
  "name": "products",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "scope": {
    "include": [
      "category",
      "subCategory",
      "manufacturer",
      "products"
    ]
  },
  "properties": {
    "nameAr": {
      "type": "string"
    },
    "nameEn": {
      "type": "string",
      "required": true
    },
    "pack": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "retailPrice": {
      "type": "number",
      "required": true
    },
    "wholeSalePrice": {
      "type": "number",
      "required": true
    },
    "wholeSaleMarketPrice": {
      "type": "number"
    },
    "marketOfficialPrice": {
      "type": "number"
    },
    "marketActualPrice": {
      "type": "number"
    },
    "dockanBuyingPrice": {
      "type": "number"
    },
    "marketPrice": {
      "type": "number"
    },
    "retailPriceDiscount": {
      "type": "number",
      "default": 0
    },
    "wholeSalePriceDiscount": {
      "type": "number",
      "default": 0
    },
    "isFeatured": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "available"
    },
    "availableTo": {
      "type": "string",
      "required": true,
      "default": "both"
    },
    "isOffer": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "offerSource": {
      "type": "string",
      "required": true,
      "default": "dockan"
    },
    "offerMaxQuantity": {
      "type": "number"
    },
    "code": {
      "type": "string"
    },
    "sku": {
      "type": "string"
    },
    "creationDate": {
      "type": "date",
      "required": true,
      "default": "$now"
    }
  },
  "validations": [],
  "relations": {
    "category": {
      "type": "belongsTo",
      "model": "categories"
    },
    "subCategory": {
      "type": "belongsTo",
      "model": "categories"
    },
    "manufacturer": {
      "type": "belongsTo",
      "model": "manufacturers"
    },
    "offers": {
      "type": "referencesMany",
      "model": "products",
      "foreignKey": "offersIds",
      "options": {
        "validate": true
      }
    },
    "tags": {
      "type": "referencesMany",
      "model": "tags",
      "foreignKey": "tagsIds",
      "options": {
        "validate": true
      }
    },
    "products": {
      "type": "referencesMany",
      "model": "products",
      "foreignKey": "productsIds",
      "options": {
        "validate": true
      }
    },
    "MEDIA": {
      "type": "embedsOne",
      "model": "media",
      "property": "media"
    }
  },
  "acls": [],
  "methods": {}
}
