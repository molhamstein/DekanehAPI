{
  "name": "topSlider",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "scope": {
    "include": [
      "manufacturers",
      "products"
    ]
  },
  "properties": {
    "image": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "string",
      "required": true,
      "default": "external"
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "activated"
    },
    "creationDate": {
      "type": "date",
      "default": "$now"
    } , 
    "clientType" : {
      "type" : "string" ,       
      "default": "all"
    }
  },
  "validations": [],
  "relations": {
    "products": {
      "type": "belongsTo",
      "model": "products",
      "foreignKey": "target"
    },
    "manufacturers": {
      "type": "belongsTo",
      "model": "manufacturers",
      "foreignKey": "target"
    }
  },
  "acls": [],
  "methods": {}
}
